<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <project.july2019.androidflashlight.Utils.CircularSeekBar
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:circle_progress_color="@color/colorAccent"
        app:circle_stroke_width="20dp"
        app:end_angle="40"
        app:pointer_color="@color/colorAccent"
        app:pointer_halo_color="@color/colorAccent"
        app:pointer_halo_color_ontouch="@color/dark_color"
        app:pointer_halo_width="15dp"
        app:progress="0"
        app:start_angle="140"
        android:id="@+id/circularseekbar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sosbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/soswhite"
        app:fabCustomSize="90dp"
        app:maxImageSize="50dp"
        />


</android.support.design.widget.CoordinatorLayout>