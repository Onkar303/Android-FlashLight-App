<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <project.july2019.androidflashlight.Utils.CircularSeekBar
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:circle_progress_color="@color/colorAccent"
        app:circle_stroke_width="20dp"
        app:end_angle="40"
        app:pointer_color="@color/colorAccent"
        app:pointer_halo_color="@color/colorAccent"
        app:pointer_halo_color_ontouch="@color/dark_color"
        app:pointer_halo_width="15dp"
        app:progress="0"
        app:start_angle="140"
        android:id="@+id/circularseekbar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sosbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/soswhite"
        app:fabCustomSize="90dp"
        app:maxImageSize="50dp"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_below="@+id/circularseekbar"
        android:background="@drawable/frequencycircularbackground"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="0"
        android:elevation="5dp"
        android:textColor="@android:color/white"
        android:id="@+id/frequencyText"/>

</RelativeLayout>